<h2>Log in</h2>
<h5>登録しているユーザーでログイン</h5>

<%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
  <div class='field'>
    <%= f.label :employee_number, "社員番号" %><br />
    <%= f.text_field :employee_number, autofocus: true, autocomplete: "employee_number" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン情報を記憶する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
